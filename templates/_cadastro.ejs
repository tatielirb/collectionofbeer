<!DOCTYPE html>
<html lang="pt-br">
<% include partials/head.ejs %>

<body class="pt">

<main id="cadastro">
  <div class="container" >

  <div class="row">
    <a href="#" class="inicio-logo"><img src="img/logo-inicio.png" alt="Collection Of Beer"></a>    
  </div>

    <form class="col-lg-7 form-cadastro">
      <div class="fieldset">
        <h2 class="legend">Seja um membro</h2>

    <div class="row">
      <div class="field-group-wrapper">
        <div class="field-group">
          <div class="field">
            <input type="email" name="email" id="email"  placeholder="E-mail">
          </div>

          <div class="field">
            <input type="nome" name="nome" id="nome" placeholder="Nome Completo">
          </div>          
        </div>
      </div>
    </div>


    <div class="row">
      <div class="field-group-wrapper">
        <div class="field-group">
          <div class="field">
            <input type="password" name="Senha" id="Senha"  placeholder="Senha">
